<project default="runtests" xmlns:provar="antlib:com.provar.testrunner.ant">
	<property environment="env"/>
	<property name="provar.home" value="${env.PROVAR_HOME}"/>
	<property name="testproject.home" value="${env.WORKSPACE}"/>
	<property name="testproject.results" value="${env.WORKSPACE}/ANT/Results"/>
	<property name="secrets.password" value="${env.ProvarSecretsPassword}"/>
	<property name="testenvironment.secretspassword" value="${env.ProvarSecretsPassword_EnvName}"/>
	
	<taskdef name="Provar-Compile" classname="com.provar.testrunner.ant.CompileTask" classpath="${provar.home}/ant/ant-provar.jar"/>
	<taskdef name="Run-Test-Case" classname="com.provar.testrunner.ant.RunnerTask" classpath="${provar.home}/ant/ant-provar.jar;${provar.home}/ant/ant-provar-bundled.jar;${provar.home}/ant/ant-provar-sf.jar"/>
	<taskdef name="Test-Cycle-Report" classname="com.provar.testrunner.ant.TestCycleReportTask" classpath="${provar.home}/ant/ant-provar.jar;${provar.home}/ant/ant-provar-bundled.jar;${provar.home}/ant/ant-provar-sf.jar"/>
	<taskdef name="Provar-ConfigureDx" classname="com.provar.testrunner.ant.ConfigureDxTask" classpath="${provar.home}/ant/ant-provar.jar;${provar.home}/ant/ant-provar-bundled.jar;${provar.home}/ant/ant-provar-sf.jar"/>

    <target name="runtests">
    
		<Provar-ConfigureDx testEnvironment="Env1"  provarHome="${provar.home}" projectPath="${testproject.home}"  adminUser="${SFDC_USERNAME_SO}" />
        <Provar-Compile provarHome="${provar.home}" projectPath="${testproject.home}"/>
    	
        <Run-Test-Case provarHome="${provar.home}" 
				projectPath="${testproject.home}" 
				resultsPath="${testproject.results}" 
				resultsPathDisposition="Increment" 
				testEnvironment="Env1" 
				webBrowser="Chrome_Headless" 
				webBrowserConfiguration="Full Screen"
				webBrowserProviderName="Desktop" 
				webBrowserDeviceName="Full Screen" 
				excludeCallableTestCases="false" 
				salesforceMetadataCache="Reload" 
				projectCachePath="../../.provarCaches" 
				testOutputlevel="FINEST" 
				pluginOutputlevel="FINEST"
				stopTestRunOnError="false"
				secretsPassword="${secrets.password}"
				testEnvironmentSecretsPassword="${testenvironment.secretspassword}"
				invokeTestRunMonitor="true"
				>
			<fileset dir="../tests/SeleniumGrid/Tests1"><include name="CreateNewContact.testcase"/></fileset>
			<emailProperties sendEmail="true" primaryRecipients="${env.EMAIL_TARGET}" ccRecipients="" bccRecipients="" emailSubject="Provar test run report" attachExecutionReport="true" attachZip="false"/>
			<attachmentProperties includeAllFailuresInSummary="true" includeOnlyFailures="false" includeOnlyBdd="false" includeSkipped="false" includeTestCaseDescription="true" includeScreenshots="true" includeWarningMessages="false" includeInfoMessages="true" includeDebugMessages="false" includeTestStepTime="false" includeTestStepPathHierarchy="true" includeFullScreenShot="false"/>
        </Run-Test-Case>

    </target>
</project>